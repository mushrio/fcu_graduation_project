<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/take_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakeOnePhoto">

    <androidx.camera.view.PreviewView
        android:id="@+id/pvv_one_photo"
        android:layout_width="match_parent"
        android:layout_height="550dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fcu.graduation.handwritingrecognition.widget.OverlayView
        android:id="@+id/overlay_view_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/pvv_one_photo"
        app:layout_constraintEnd_toEndOf="@+id/pvv_one_photo"
        app:layout_constraintStart_toStartOf="@+id/pvv_one_photo"
        app:layout_constraintTop_toTopOf="@+id/pvv_one_photo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbtn_take_one_photo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp"
        android:text="拍照"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_primary40"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/material_dynamic_primary30" />

    <ImageView
        android:id="@+id/iv_back_to_main"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

</androidx.constraintlayout.widget.ConstraintLayout>